.screen {
  flex: 1;
  display: flex;
  flex-direction: column;
  max-height: 100%;
}

.navbar {
  display: flex;
  flex-direction: row;
  z-index: 1;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  z-index: 0;
}

.content-padded {
  composes: content;
  padding: 25px;
}
