.list {
  display: flex;
  flex-flow: column nowrap;
  align-items: flex-start;
}

.row {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.size-field {
  flex: 0 0 150px;
}

.quality-field {
  flex: 1 0 200px;
}

.footer {
  display: flex;
  flex-flow: row nowrap;

  & button {
    line-height: 20px !important;

    & :global .dashicons {
      vertical-align: middle !important;
    }
  }
}
