.root {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
  animation-name: animation;
  animation-duration: 1s;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}

@keyframes animation {
  0%, 100% {
    background: #e3e3e3;
  }

  50% {
    background: #efefef;
  }
}
